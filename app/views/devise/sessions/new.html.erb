<div class="login-card-bg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-card-top">  
  <h2 class="mdl-login log-in-header">Log in</h2>
    <%= devise_error_messages! %>
    <div class="mdl-login mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input line" %>
      <%= f.label :email, class: "mdl-textfield__label hint-text" %>
    </div>
    <div class="mdl-login mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input line" %>
      <%= f.label :password, class: "mdl-textfield__label hint-text" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="mdl-login mdl-checkbox mdl-js-checkbox">
        <%= f.check_box :remember_me, class: "mdl-checkbox__input shape", checked: true %>
      </div>
    <% end -%>
Â  </div>
  
  <div class="login-card-bot">
    <div class="actions">
      <%= f.submit "Log in", class: "button button-text" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
</div>
