<h2>Log in</h2>

<script text="javascript">
document.addEventListener('turbolinks:load', function() {
  componentHandler.upgradeDom();
});
</script>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
    <%= f.label :email, class: "mdl-textfield__label" %>
  </div>
  <br/>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
    <%= f.label :password, class: "mdl-textfield__label" %>
  </div>
  <br/>
  <% if devise_mapping.rememberable? -%>
    <div class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
      <%= f.check_box :remember_me, class: "mdl-checkbox__input", checked: true %>
      <%= f.label :remember_me, class: "mdl-checkbox__label" %>
    </div>
  <% end -%>

  <br/>
  <div class="actions">
    <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
