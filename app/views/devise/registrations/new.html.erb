<script text="javascript">
document.addEventListener('turbolinks:load', function() {
  componentHandler.upgradeDom();
});
</script>

<div class="login-card-bg">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="login-card-top">
    <h2 class="mdl-login log-in-header">Sign up</h2>
      <%= devise_error_messages! %>

      <div class="mdl-login mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input line" %>
        <%= f.label :email, class: "mdl-textfield__label hint-text" %>
      </div>
      <div class="mdl-login mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input line" %>
        <%= f.label :password, class: "mdl-textfield__label hint-text" %>
      </div>
      <div class="mdl-login mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input line" %>
        <%= f.label :password_confirmation, class: "mdl-textfield__label hint-text" %>
      </div>
  </div>

  <div class="signup-card-bot">  
    <div class="actions">
      <%= f.submit "Sign up", class: "button button-text" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
</div>
