<div class="groupchat-form">
  <%= form_for groupchat, remote: true do |f| %>
    <div class="input-group">
      <span class="input-group-addon">topic:</span>
      <%= f.text_field :topic, class: "form-control"%>
      <span class="input-group-addon">members:</span>
      <%= f.collection_select :user_ids, User.where.not(id: current_user).collect, :id, :email, {include_hidden: false}, {:multiple => true} %>
    </div>
    <%= f.submit class: "btn btn-primary", id: "create-groupchat" %>
  <% end %>
</div>
