  <div class="groupchat-form">
      <div class="upper-create">	
        <div class="group-name-format">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <%= f.label :topic, 'Group Name', class: "mdl-textfield__label", id: "special-label" %>
            <%= f.text_field :topic, class: "mdl-textfield__input", id: "special-input", readonly: true %>
          </div>
          <label class="member_label" for="groupchat_members">Group Members</label>
          <p class="member_list" id="select_message">You do not have permission to edit this group, contact <%= @groupchat.users[0] %>.</p>
        </div>
      </div>
      <div class="lower-create">
        <div class="group-member-format">
          <ul id="special-select">
            <% groupchat.users.each do |user| %>
              <li class="groupmember-select no-select" id=<%= user.id %> value=<%= user.id %>>
                <%= user.name %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
  </div>
