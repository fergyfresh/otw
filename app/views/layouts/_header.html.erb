<script>
function myFunction() {
  var x = document.getElementById("myTopnav");
  if (x.className === "topnav") {
    x.className += " responsive";
  } else {
    x.className = "topnav";
  }
}
</script>

<div class="topnav" id="myTopnav">
<% if user_signed_in? %>
  <%= link_to "Home", authenticated_root_path, style: "float:left" %>
  <%= link_to "Log out", destroy_user_session_path, method: "delete" %> 
  <%= link_to "Settings", edit_user_registration_path(current_user) %>
<% else %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="log-in-helper">New here?</p>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "log-in-nav" %>
  <% else %>
    <p class="log-in-helper">Come here often?</p>
    <%= link_to "Log in", unauthenticated_root_path, class: "log-in-nav" %>
  <% end -%>
<% end %>
</div>
